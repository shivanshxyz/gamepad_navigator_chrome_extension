{
	"manifest_version": 2,
	"name": "Gamepad Navigator",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": ["<all_urls>", "*://*/_/chrome/newtab*"],
			"js": ["setup.js", "global.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["setup.js", "global.js", "youtube.js"],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"tabs"
	]
}
