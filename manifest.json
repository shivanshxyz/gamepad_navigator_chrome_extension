{
	"manifest_version": 2,
	"name": "Gamepad Navigator",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["setup.js", "global.js"]
		},
		{
			"matches": ["https://www.youtube.com/tv*"],
			"js": ["setup.js", "global.js", "ytv.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"tabs"
	]
}
